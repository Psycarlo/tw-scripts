{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "./js",
    "rootDir": "./ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"]
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}
